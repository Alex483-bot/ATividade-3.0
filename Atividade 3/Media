public class Media {
    public static void calcularMedia() {
        int media = 0;
        for (int i = 0; i < Main.lista.size(); i++) {
            media += Main.lista.get(i).getIdade();
        }
        media = media / Main.lista.size();
        System.out.println("A media de altura entre as pessoas Ã© " +media);
    }
}
